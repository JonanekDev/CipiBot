generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model TicketCategories {
  id        String   @id @default(cuid())
  guildId   String
  name      String
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tickets Tickets[]
  roles   TicketCategoryRoles[]
  questions TicketCategoryQuestions[]

  @@index([guildId])
}

model TicketCategoryQuestions {
  id          String   @id @default(cuid())
  categoryId  String
  question    String
  type        String
  required    Boolean  @default(true)
  order       Int

  category TicketCategories @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
}

model Tickets {
  id              String         @id @default(cuid())
  guildId         String
  categoryId     String
  userId          String
  channelId       String?
  status          TicketStatus   @default(OPEN)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  category TicketCategories @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([guildId])
  @@index([userId])
  @@index([channelId])
}

model TicketCategoryRoles {
  id          String   @id @default(cuid())
  categoryId  String
  roleId      String

  category TicketCategories @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
}

enum TicketStatus {
  OPEN
  CLOSED
}